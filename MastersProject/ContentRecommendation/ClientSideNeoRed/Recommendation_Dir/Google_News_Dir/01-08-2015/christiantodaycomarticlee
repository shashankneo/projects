<script src="http://i2.christiantoday.com/assets/js/lib/owl.carousel.min.js"></script>
<script>
jQuery(document).ready(function($) {
  var breaking = $('.breaking-slider');
  breaking.owlCarousel({
    loop: true,
    margin: 10,
    nav: false,
    dots: false,
    mouseDrag: false,
    items: 1,
    animateOut: 'fadeOut',
    animateIn: 'fadeIn',
    autoplay: true,
    autoplayTimeout: 3000,
    autoplayHoverPause: true
  });
  breaking.on('change.owl.carousel', function(event) {
    if (event.property.value > event.item.index) {
      if ($('.active').next('.owl-item').find('.important').length) {
        $('.breaking-news').addClass('red');
      } else {
        $('.breaking-news').removeClass('red');
      }
    } else{
      if ($('.active').prev('.owl-item').find('.important').length) {
        $('.breaking-news').addClass('red');
      } else {
        $('.breaking-news').removeClass('red');
      }
    }
  });
  $('.owl-item.active .important').parents('.breaking-news').addClass('red');
  $('.breaking-news .fa-caret-right').click(function() {
      breaking.trigger('next.owl.carousel');
  });
  $('.breaking-news .fa-caret-left').click(function() {
      breaking.trigger('prev.owl.carousel');
  });
  $('.breaking-news .fa-pause').click(function() {
      breaking.trigger('stop.owl.autoplay');
  });
});
</script>

<script>
$(document).ready(function () {
	$(".popup_email").click(function(e) {
		addthis_sendto('email');return false;		
	});
