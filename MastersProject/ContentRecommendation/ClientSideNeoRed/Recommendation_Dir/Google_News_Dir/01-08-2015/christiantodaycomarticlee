		$("#v_article p").add($("#v_article blockquote")).css("font-size",parseInt($("#v_article p").css("font-size"))+1);
	});

	$(".smaller").click(function(){
		$("#v_article p").add($("#v_article blockquote")).css("font-size",parseInt($("#v_article p").css("font-size"))-1);
	});
});
</script>
