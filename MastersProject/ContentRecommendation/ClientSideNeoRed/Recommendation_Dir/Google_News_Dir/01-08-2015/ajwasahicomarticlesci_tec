<script type="text/javascript">

$(function(){
	var
	 class_name_top = class_name_2nd = class_name_3rd = "current"
	,parts = location.pathname.split("/")
	;

	var btn_open = '<div class="btn_open_wrap"><div class="btn_open"><a href="javascript:void(0);" id="open_button">Open</a></div></div>'
	$(".categories:last").append(btn_open);

	$(".btn_open a").on({
		"click": menukHandler
	});

	$(".btn_close a").on({
		"click": menukHandler
	});

	if (parts[1] == '') {
		$("#header_topcategory_whatsnew").hide();
	}

	if (parts[1] != 'article' && parts[1] != 'category') {
		return true;
	}

	// 1st
	if (parts[2] != undefined) {
		$("#header_topcategory_" + parts[2]).addClass( class_name_top );
	}

	// 2nd
	if (parts[3] != undefined) {
		$("#header_subcategory_" + parts[3]).addClass( class_name_2nd );
	}

	// 3rd
	if (parts[4] != undefined) {
		$("#header_thirdcategory_" + parts[4]).addClass( class_name_3rd );
	}

	// drop down
	var   btn_dropdown = $("#dropdown_categories  .btn_dropdown")
		, dropdown_list = $("#dropdown_categories > ul.dropdown ul")

	$("body").bind("click", function(){
		dropdown_list.hide();
		btn_dropdown.removeClass("current");
		btn_dropdown.attr("current", "");
	});

	btn_dropdown.bind("click", function(e){
		dropdown_list.hide();
		btn_dropdown.removeClass("current");
		if ( $(this).attr("current") == 1 ) {
			$(this).attr("current", "");
			$(this).removeClass("current");
			$(this).nextAll("ul").hide();
		}
		else {
			btn_dropdown.attr("current", "");
			$(this).attr("current", 1);
			$(this).addClass("current");
			$(this).nextAll("ul").show();
		}
		
		e.stopPropagation();
	});

});

function menukHandler(e){
	if ($(this).attr("id") == "open_button") {
		$(".all_categories").fadeIn("fast");
	}
	else if ($(this).attr("id") == "close_button") {
		$(".all_categories").hide();
	}

}

</script>
