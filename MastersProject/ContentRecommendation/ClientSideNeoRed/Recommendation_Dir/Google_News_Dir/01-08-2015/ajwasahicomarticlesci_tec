var interval_id;
var languages = {
	"en": {
		"y": "0",
		"title_link": "#FFF",
		"menu_bg": "#333",
		"menu_link": "#FFF"
	}
	,
	"cn": {
		"y": "-40",
		"title_link": "#003a87",
		"menu_bg": "#f3f1e2",
		"menu_link": "#003a87"
	}
	,
	"ja": {
		"y": "-80",
		"title_link": "#00345C",
		"menu_bg": "#EBEBEB",
		"menu_link": "#00345C"
	}
	,
	"kr": {
		"y": "-120",
		"title_link": "#FFF",
		"menu_bg": "#E6E6E6",
		"menu_link": "#2E2E66"
	}
};

$(function(){
	$("#footer_languages ul li a").hover(
		function(){
			clearReset();
			setColour(this.id.slice(-2));
		}, 
		function(){
			startReset();
		}
	);
});

function setColour(country) {
	$("#footer #footer_titles").stop().animate({
		top: languages[country].y + "px" 
	}, 200 );

	$("#footer_languages a").css({
		color: languages[country].title_link
	});

	$("#footer .footer_menu").css({
		backgroundColor: languages[country].menu_bg
	});

	$("#footer .footer_menu ul li a").css({
		color: languages[country].menu_link
	});
}

function Reset() {
	setColour("en");
	clearReset();
}

function startReset() {
	interval_id = setInterval(function() {
		Reset();
	}, 2000);
}

function clearReset() {
	clearInterval(interval_id);
}
</script>


