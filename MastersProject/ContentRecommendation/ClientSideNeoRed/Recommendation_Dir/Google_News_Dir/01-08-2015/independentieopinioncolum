                //initialize the comments app
                (function () {
                    var getLivefyreToken = function(onValidToken, onRequireCommentLogin) {
                        if ($.cookie('EVOLOK_SESSION') && $.cookie('LIVEFYRE_SESSION')) {
                            onValidToken && onValidToken.call(this, $.cookie('LIVEFYRE_SESSION'));

                        } else {
                            onRequireCommentLogin && onRequireCommentLogin.call(this);
                        }
                    };

                    var detachRegisterOption = function() {
                        $('#livefyre-comments .fyre .fyre-login-bar .fyre-or-register').remove();
                    };

                    var attachRegisterOption = function() {
                        detachRegisterOption();

                        $('#livefyre-comments .fyre .fyre-login-bar')
                                .append('<div class="fyre-or-register"><span class="fyre-or">or</span><a href="#" class="fyre-register">Register</a></div>')
                                .find('.fyre-register').click(function(e) {
                                    e.preventDefault();

                                    getLivefyreToken(
                                            fyre.conv.login,
                                            function() {
                                                evolok.showCommentsRegisterOverlay({
                                                    onCompleted: function() {
                                                        getLivefyreToken(fyre.conv.login);
                                                    }
                                                });
                                            });
                                });
                    };

                    head.ready(function() {
                        var EventHandler = com.inmplc.EventHandler;

                        EventHandler.addHandler('loggedIn', function(e) {
                            getLivefyreToken(function(token) {
                                fyre.conv.login(token);
                            });
                        });

                        EventHandler.addHandler('loggedOut', function(e) {
                            fyre.conv.logout();
                        });
                    });

                    authDelegate.login = function (handlers) {

                        var handleSuccessfulLoginEvent = function(token) {
                            fyre.conv.login(token);
                            handlers.success();
                        };

                        getLivefyreToken(
                                handleSuccessfulLoginEvent,
                                function() {
                                    evolok.showCommentsLoginOverlay({
                                        onCompleted: function() {
                                            getLivefyreToken(
                                                    handleSuccessfulLoginEvent,
                                                    function() {
                                                        handlers.failure();
                                                    }
                                            );
                                        },
                                        onClosed: function() {
                                            handlers.failure();
                                        }
                                    });
                                }
                        );

                        return true;
                    };

                    authDelegate.logout = function (handlers) {
                        handlers.success();

                        evolok && evolok.logout && evolok.logout();

                        return true;
                    };
                    authDelegate.viewProfile = function () {};
                    authDelegate.editProfile = function () {};

                    var livefyreCallback = function(app){
                        try{
                            app.on('commentCountUpdated', function(count) {
                                onLivefyreCommentCountUpdated && onLivefyreCommentCountUpdated(count);
                            });

                            app.on('initialRenderComplete', function() {
                                attachRegisterOption();
                                getLivefyreToken(fyre.conv.login);
                            });

                            app.on('userLoggedIn', function() {
                                detachRegisterOption();
                            });

                            app.on('userLoggedOut', function() {
                                attachRegisterOption();
                            });
                        }
                        catch(error){
                            $.error("Livefyre failed to load", error);
                        }
                    };

                    fyre.conv.load({
                        network: 'independent-ie.fyre.co',
                        authDelegate: authDelegate
