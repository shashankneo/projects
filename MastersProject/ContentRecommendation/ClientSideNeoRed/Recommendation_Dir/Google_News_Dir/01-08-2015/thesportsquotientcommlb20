<script type="text/javascript">

function init_autosize() {
    $('.comment_box').autosize(); 
}

function load_comments() {
    $("#comment_dump").load("/18023/load-comments", "", function() {
        if (location.hash.substring(0,9) == '#comment-') {
            comment_id = location.hash.substr(9);
            highlight_comment(comment_id);
            $('html, body').animate({
                scrollTop: $("#comment_"+comment_id).offset().top
            }, 1000);
        }
        
        init_autosize();
    });
}

function highlight_comment(comment_id) {
    $("#comment_highlight_"+comment_id).toggleClass('comment comment_highlighted');
}

function delete_comment(comment_id) {
    if (confirm('Are you sure you want to delete this comment?')) {
        $('#delete_comment_'+comment_id).submit();
    }
}

load_comments();
</script>

