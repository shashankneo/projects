    <!-- viral_nodes are BlogEntries that fall under the categories: Soundoff, Stat Machine, or Pulse -->
    <div class="viral_content" id="viral_content"></div>
</div>
<script type="text/javascript">
sidebar_types = ['all', 'pulse', 'stat', 'soundoff']


main_tag = 'all'


function change_sidebar(type) {
    if ($('#sidebar_'+type).hasClass('selected'))
        window.open($('#sidebar_'+type).attr('href'),'_self')
    
    $.getJSON('/sidebar/'+main_tag+'/'+type, function (data) {
        $('#viral_content').html(data.content);
        
        for (i = 0; i < sidebar_types.length; i++)
            $('#sidebar_'+sidebar_types[i]).removeClass();
        
        $('#sidebar_'+type).addClass('selected');
    })
}

change_sidebar('all')

</script>

