    var SOCIAL_STATS_URL = 'http://ticker.onion.com/ss';
    $(function() {
      fetchSocialStats('avclub.article.223215', function(data) {
        function formatk(num) {
          return num > 999 ? (num/1000).toFixed(1) + 'k' : num;
        }
        var statValues = data[0]; // contains share counts
        var metaValues = data[1]; // velocity, acceleration and time updated
        if (!statValues)
          return;
        for (var statName in statValues) {
          // maybe we don't need this
          // var elm = $('.sharetools .' + statName + ' a span');
          var elm = $('.article-metabar .article-tools .' + statName + ' a');
          if (elm) {
            elm.text(formatk(statValues[statName]));
          }
        }
      });
    });
  </script>
  

  
