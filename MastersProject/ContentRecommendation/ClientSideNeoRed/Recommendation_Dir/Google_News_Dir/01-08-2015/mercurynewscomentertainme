<script type="text/javascript">
$( document ).ready(function() {
    if ( $(".articleBody p:nth-of-type(12)").length ) {
        // if there is a 12th p tag in articleBody
        // put ppixelAutoplace div at P4 at 425px wide
        $(".articleBody p:nth-of-type(4)").prepend("<div id=\"ppixelAutoplaceParent\" style=\"float:left;margin:0 15px 0 0;\"><div class=\"ndn_embed\" id=\"ppixelAutoplace\" data-config-distributor-id=\"90757\" style=\"max-width:425px;max-height:240px;\"></div></div>");
