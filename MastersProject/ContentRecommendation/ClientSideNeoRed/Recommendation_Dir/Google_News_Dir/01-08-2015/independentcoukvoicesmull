$(document).ready(function() {
// bind short registration to comments login button
$('#singleCommentHeader .singleCommentLogin').live('click',function() {
gigya.accounts.showScreenSet({screenSet:'Short-login-web2',lastLoginIndication:'none',onAfterScreenLoad:bindTooltips,onBeforeSubmit:checkForRobot});
function bindTooltips() {
// mobile fix start
$('.gigya-screen-dialog-mobile').attr('class','gigya-screen-dialog');
var oldDialog = '<div class="gigya-screen-dialog-top"><div class="gigya-screen-dialog-caption">Sign in</div><div class="gigya-screen-dialog-close"></div></div>';
$('.gigya-screen-caption').replaceWith(oldDialog);
$('.gigya-screen-dialog-close').click(function() {
$(this).parents('.gigya-screen-dialog').remove();
});
// mobile fix end
$('.gigya-screen-dialog .gigya-input-text, .gigya-screen-dialog select').live('focus', function() {
$(this).siblings('.tooltip').css('display','block');
}).live('blur', function() {
$(this).siblings('.tooltip').fadeOut(); });
}
});
// hide submit button on user logged out
$('body').mousemove(function() {
if (!$('body').hasClass('gigyaLoggedIn')) {
$('#singleCommentSubmit').hide();
} else {
$('#singleCommentSubmit').show();
}
$('.comment-formatting-btns').hide();
});
// setup flag functionality on comments
$('#singleCommentHeader .comments .flag').live('mousedown',function(e) {
if ($('body').hasClass('gigyaLoggedIn')) {
e.preventDefault();
var iCommentID = $(this).parents('.commentBlock').first().attr('id');
var flagParams = {
commentID: iCommentID,
categoryID: params.categoryID, streamID: params.streamID
};
gigya.comments.flagComment(flagParams);
alert('This comment has now been flagged');
}
});
// setup reply functionality on comments
$('.reply').live('click',function() { if ($('body').hasClass('gigyaLoggedIn')) {
$('.replyFormClone').remove();
$(this).parents('.commentBlock').first().find('> .replies').append('<form class="replyFormClone"><textarea></textarea><input type="submit" value="Post" /></form>');
$('.replyFormClone').submit(function(e) {
e.preventDefault();
var valCommentText = $('.replyFormClone textarea').val().replace(/\n/g, "<br />");
var valParentID = $(this).parents('.commentBlock').first().attr('id');
var event = {
commentText: valCommentText,
side: '',
parentID: valParentID,
errorContainerClass : "errorReply"
};
//ind.gigya.comments.eventHandlers.submit(event, params);
gigya.comments.postComment({
categoryID: params.categoryID,
streamID: params.streamID,
commentText: event.commentText,
parentID: event.parentID,
callback: function(response) {
if(response.errorCode == 0) {
$('.replyFormClone').html('<p class="successMsg">Your comment has been successfully submitted</p>');
} else {
}
}
});
return false;
});
} else {
gigya.accounts.showScreenSet({screenSet:'Short-login-web2'});
}
});
// comments fix end
});
