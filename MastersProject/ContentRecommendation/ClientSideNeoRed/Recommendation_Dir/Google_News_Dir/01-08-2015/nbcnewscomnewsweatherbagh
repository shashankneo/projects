                          playerInstance.videoObj = {"type":"widget","widget_type":"inline-video","videoType":"WebExtra","mpxId":"494122051782","guid":"x_lon_bagheat_150730","pubDate":"2015-07-30 13:23:00 Z","expirationDate":"2113-01-17 13:23:00 Z","playbackIsDisabled":false,"availabilityState":"available","title":"Think You've Got It Hot? Try Keeping Cool in Baghdad","description":"Four-day mandatory holiday called in Iraq as temperatures soar above 120 degrees, with man and beast seeking ways to stay cool.","thumbnail":"http://media2.s-nbcnews.com/i/MSNBC/Components/Video/__NEW/x_lon_bagheat_150730.jpg","source":"NBC News","sourceId":null,"canonicalUrl":"http://www.nbcnews.com/video/think-youve-got-it-hot-try-keeping-cool-in-baghdad-494122051782","shortUrl":"http://nbcnews.to/1LSV0p7","associatedPlaylistUrl":"http://feed.theplatform.com/f/2E2eJC/nnd_53296419","fallbackPlaylistUrl":null,"topVideosPlaylistUrl":"http://feed.theplatform.com/f/2E2eJC/nnd_20381145","mezzVersion":"1","embedUrl":"http://player.theplatform.com/p/2E2eJC/nbcNewsOffsite?guid=x_lon_bagheat_150730","videoAssets":[{"format":"ISM","assetType":"Smooth_1","publicUrl":"http://link.theplatform.com/s/2E2eJC/CcsKayRICBPO","width":"1464","height":"824","bitRate":"3763968","privateUrl":null,"duration":"25.4","durationISO":"PT25.4S"},{"format":"MPEG4","assetType":"FireTV-Once","publicUrl":"http://link.theplatform.com/s/2E2eJC/vlmTjoXFxkqU","width":"0","height":"0","bitRate":"0","privateUrl":null,"duration":"25","durationISO":"PT25S"},{"format":"MPEG4","assetType":"OnceURL","publicUrl":"http://link.theplatform.com/s/2E2eJC/zOLTK9IOmMyp","width":"0","height":"0","bitRate":"0","privateUrl":null,"duration":"25","durationISO":"PT25S"},{"format":"MPEG4","assetType":"Limelight MP4","publicUrl":"http://link.theplatform.com/s/2E2eJC/Wa7EiALmlFeM","width":"420","height":"240","bitRate":"500000","privateUrl":null,"duration":"25","durationISO":"PT25S"},{"format":"QT","assetType":"Mezzanine Video","publicUrl":"http://link.theplatform.com/s/2E2eJC/NqkDqFGJ_E6i","width":"0","height":"0","bitRate":"6000000","privateUrl":null,"duration":"25","durationISO":"PT25S"},{"format":"MPEG4","assetType":"Limelight MP4","publicUrl":"http://link.theplatform.com/s/2E2eJC/lhMb3BT9p7n6","width":"640","height":"360","bitRate":"800000","privateUrl":null,"duration":"25","durationISO":"PT25S"},{"format":"MPEG4","assetType":"FireTV-Once","publicUrl":"http://link.theplatform.com/s/2E2eJC/N0cSJyDq2TUI","width":"0","height":"0","bitRate":"0","privateUrl":null,"duration":"25","durationISO":"PT25S"}],"video_playlists":[{"playlist_id":"nnd_53296419","label":null}],"nativeVideo":false,"autoPlay":true,"defaultAssociation":null,"duration":25,"liveVideoEvent":null,"liveVideoStatus":null,"hasCaption":false,"durationISO":"PT25.4S"};
