<script type="text/javascript">
    function getMetaContent(propName) {
        var metas = document.getElementsByTagName('meta');
        for (i = 0; i < metas.length; i++) {
            if (metas[i].getAttribute("name") == propName) {
                return metas[i].getAttribute("content");
            }
        }
        return "";
    }
    (function() {
        // Global namespaces.
        window.ngn = {};
        ngn.collections = {};
        ngn.models = {};
        ngn.models.ads = {};
        ngn.utils = {};
        ngn.components = {};
        ngn.plugins = {};
        ngn.fn = {};
        ngn.helpers = {};
        ngn.events = {};
        ngn.ins = {};
        ngn.dynamicfeed = {};

        ngn.helpers.isEditMode = false;
        ngn.models.ads.dfpId = getMetaContent("dfp:networkCode");
        ngn.models.ads.adDomain = getMetaContent("dfp:adDomain");
        ngn.models.videoPlayerFeed = getMetaContent("mpx:videoPlayerFeed");
        ngn.models.adaptiveWidths = getMetaContent("img:supportedWidths");
        ngn.helpers.areCommentsDisabled = getMetaContent("aem:commentsSetting") == "disabled";
        ngn.helpers.isSimpleArticle = getMetaContent("aem:template") == "news-story-simple-article";
        ngn.helpers.isArticleUnedited = getMetaContent("cq:openPageProperties") == "true";
        ngn.helpers.isImageCollectionTemplate = getMetaContent("aem:template") == "news-image-collection";

    })();
</script>

