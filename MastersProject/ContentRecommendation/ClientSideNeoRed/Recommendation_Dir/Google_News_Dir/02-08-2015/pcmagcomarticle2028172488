<script type="text/javascript">
(function() {
    var url = 'http://www.pcmag.com/article2/0,2817,2488915,00.asp';
    var fburl = window.location;// Fix for facebook caching Preview Urls 
    if (parseUri(fburl).relative != '/video/latest') {
        fburl = window.location;
    } else {
        fburl = 'http://www.pcmag.com/article2/0,2817,2488915,00.asp';
    }

    function getfbcount(){
        return $.getJSON('http://graph.facebook.com/fql?q=SELECT%20url,%20total_count%20FROM%20link_stat%20WHERE%20url=%27'+ fburl + '%27&callback=?', function (result) {
            if (result && result.data && result.data[0] && result.data[0].total_count) {
                $('.facebook_share').attr("data-shares",result.data[0].total_count);
            }
            else {
                $('.facebook_share').attr("data-shares",0);
            }
        });
    }
    function gettwcount(){
        return $.getJSON('http://urls.api.twitter.com/1/urls/count.json?url=' + url + '&callback=?', function (data) {
            if (data && data.count) {
                $('.tweet_share').attr("data-shares",data.count);
            }
            else {
                $('.tweet_share').attr("data-shares",0);
            }
        });
    }
    function getpincount(){
        return $.getJSON('http://api.pinterest.com/v1/urls/count.json?url=' + url + '&callback=?', function (data) {
            if (data && data.count) {
                $('.pin_share').attr("data-shares",data.count);
            }
            else {
                $('.pin_share').attr("data-shares",0);
            }
        });
    }
    function getldcount(){
        return $.getJSON('http://www.linkedin.com/countserv/count/share?url=' + url + '&format=jsonp&callback=?', function (data) {
            if (data && data.count) {
                $('.ln_share').attr("data-shares",data.count);
            }
            else {
                $('.ln_share').attr("data-shares",0);
            }
        });
    }
    function getsbcount() {
        return  $.ajax({ type: 'GET',
            url: '/social/stumbleupon',
            dataType: 'json',
            async:'false',
            data: { url: 'http://www.pcmag.com/article2/0,2817,2488915,00.asp'},
            success: function (data) {
                if (data && data.result && data.result.views) {
                    $('.stumb_share').attr("data-shares",data.result.views);
                }
                else {
                    $('.stumb_share').attr("data-shares",0);
                }
            }
        });
    } 
    function getgpcount() {
        return  $.ajax({ type: 'GET',
            url: '/social/googleplus',
            dataType: 'json',
            async:'false',
            data: { url: 'http://www.pcmag.com/article2/0,2817,2488915,00.asp'},
            success: function (data) {
                if (data && data.count) {
                    $('.gplus_share').attr("data-shares", data.count);
                }
                else {
                    $('.gplus_share').attr("data-shares", 0);
                }
            }
        });
    }
    $(document).ready(function(){ 
        $.when(getfbcount(),gettwcount(),getpincount(),getldcount(),getsbcount(),getgpcount()).done(function(){
            var anchors = $('.share_bar a').map(function () { return $(this).attr("data-shares"); }).get();
            var total = eval(anchors.join('+'));
            $(".total-shares").attr("data-shares",total);
            if(total > 999){
                total = (total.toFixed(2)/1000).toPrecision(2) + "K";
                $(".total-shares span").html(total);
            }
            else{
                $(".total-shares span").html(total);
            }

        });
        var shortenUrl = window.location;
        if (parseUri(shortenUrl).relative != '/video/latest') {
            shortenUrl = PCMAG_URL_SHORTENER.shorten();
        } else {
            shortenUrl = PCMAG_URL_SHORTENER.testShorten('http://www.pcmag.com/article2/0,2817,2488915,00.asp');
        }
        $("a.tweet_share").attr("href", shortenUrl);
        $("a.facebook_share").click(function (e) {
                            e.preventDefault();
                            window.open('http://www.facebook.com/sharer.php?s=100&p[url]=http://www.pcmag.com/article2/0,2817,2488915,00.asp&p[images][0]=http://www5.pcmag.com/media/images/473997-facebook-lollapalooza.jpg?thumb=y&p[title]=Facebook+Using+Lollapalooza+to+Test+Broader+Place+Tips&p[summary]=Which+is+a+better+way+to+experience+Lollapalooza%3f+Facebook%26%2339%3bs+Place+Tips+or+Snapchat%26%2339%3bs+Live+Stories%3f','','width=820px,height=600px'); 
        });
        $("a.tweet_share").click(function(e){
            e.preventDefault();
            var url = $("a.tweet_share").attr("href");
            if(typeof url!='undefined' && url!=null){
                window.open('http://twitter.com/home?status=RT+@PCMag+Facebook+Using+Lollapalooza+to+Test+Broader+Place+Tips+'+url,'','width=820,height=600');
        }
        else{
                window.open('http://twitter.com/home?status=RT+@PCMag+Facebook+Using+Lollapalooza+to+Test+Broader+Place+Tips+http://www.pcmag.com/article2/0,2817,2488915,00.asp','','width=820,height=600');
            }
        });
        $("a.pin_share").click(function (e) {
                e.preventDefault();
                window.open('http://pinterest.com/pin/create/button/?url=http://www.pcmag.com/article2/0,2817,2488915,00.asp&media=http://www5.pcmag.com/media/images/473997-facebook-lollapalooza.jpg?thumb=y&description=Facebook+Using+Lollapalooza+to+Test+Broader+Place+Tips','','width=820,height=600');
        });
        $(".horiz_menu a.plus_share").click(function(){
                $(this).hide();
                $(".horiz_menu a.stumb_share,.horiz_menu a.pin_share,.horiz_menu a.ln_share,.horiz_menu a.minus_share,.horiz_menu a.email-to-a-friend,.horiz_menu .print").show("slow");
        });
        $(".horiz_menu a.minus_share").click(function(){
                $(".horiz_menu a.stumb_share,.horiz_menu a.pin_share,.horiz_menu a.ln_share,.horiz_menu a.minus_share,.horiz_menu a.email-to-a-friend,.horiz_menu .print").hide("slow");
                $(".horiz_menu a.plus_share").show();
        });
    });
}());
