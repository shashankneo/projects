if (__PCMAG.HideTab === false) {
    var rightRail = document.querySelector("#secondary-content, #sidebar, #pcmag-sidebar");
    if(rightRail !== null && $(rightRail).css("display") !== "none"){
        window._taboola = window._taboola || [];
        var pageTaboolaType = __PCMAG.pageTaboolaTypes.filter(function(obj){return obj.template == templateReport[0].reportValue;});
        if (pageTaboolaType.length == 0){
            document.write('<div id="taboola-right-rail-thumbnails" data-page-type="category" data-placement="Right Rail Thumbnails - Other -ngtd"></div>');
            _taboola.push({
                mode: 'thumbnails-rr',
                container: 'taboola-right-rail-thumbnails',
                placement: 'Right Rail Thumbnails - Other -ngtd',
                target_type: 'mix'
            });
        }
        else{
