<script>
"use strict";
(function($) {
    var yHeight = 10000;
    var $el = $('#adpos10');
    if ($el.length < 1) {
        return false;
    }
    $(window).scroll(function (e){
        var $page = $('html').height();
        var $stopAt = $page - 910; //page adjustment minus footer area.
        if ($el.css('position') !== 'fixed') {
            var position = $el.position();
            yHeight = position.top + 265;
        }
        if ($(this).scrollTop() > yHeight && $el.css('position') !== 'fixed') {
            $el.css({'position': 'fixed', 'top': '65px'});
        }
        if ($(this).scrollTop() < yHeight && $el.css('position') === 'fixed') {
            $el.css({'position': 'static', 'top': '0px'});
        }
        if ($(this).scrollTop() > $stopAt && $el.css('position') === 'fixed') {
            $el.css({'position': 'static', 'top': '0px'});
        }
    });
})(jQuery);
</script>
		
	

        
