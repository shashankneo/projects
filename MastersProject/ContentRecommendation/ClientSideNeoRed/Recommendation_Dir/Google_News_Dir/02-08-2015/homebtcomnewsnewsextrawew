<script type="text/javascript">
function addthisCounts(){
	if(typeof addthis == 'undefined'){
		setTimeout("addthisCounts()", 500);
		return;
	}
	addthis.addEventListener('addthis.menu.share', shareEventHandler);
	$(".article .content:has('li.share')").each(function(index){
		var ele=$(this);
		var shar_obj='';
		var href=ele.find('h3 a').attr('href');
		if(href){
			shar_obj = {url: href.indexOf("http")==0 ? href : window.location.protocol + "//" + window.location.host + href, title: ele.find('h3 a').text()};
		}
		else{
			shar_obj = {url: window.location.href, title: $('.picture-gallery h2').text()};
		}
		var addthis_btn=ele.find('li.share .addthis_btn');
		var addthis_btn_count=ele.find('li.share .bubble-pointer label');
		addthis_btn.attr('id','addthis_btn'+index);
		addthis_btn_count.attr('id','addthis_btn_count'+index);
		addthis.button('#addthis_btn'+index, {}, shar_obj);
		addthis.counter('#addthis_btn_count'+index, {}, shar_obj);
	});
	addthis.button('.addthis_button');

}
