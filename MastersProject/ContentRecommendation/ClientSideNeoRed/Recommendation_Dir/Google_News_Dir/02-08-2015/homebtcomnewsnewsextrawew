			<script type="text/javascript">
					funccmd.q.push(function () {
					    var msurl = '/btapps/api/mostshared/';
					    var msaurl = '/ajaxapic?en=trending/A_N_MostShared&ids=';
					    $.ajax({
					        url: msurl,
					        type: 'GET',
					        cache: true,
					        dataType: 'jsonp',
					        jsonp: 'callback',
							jsonpCallback: 'mostshared',
					        success: function (data) {
					        	if(!data.error){
						        	var ids=[];
						        	$.each(data,function(ind,val){
						        		var myRegexp = new RegExp(/http.*-1(\d+).*/i);
						        		var match = myRegexp.exec(val.url);
						        		if(match!=null){
						        			if($.inArray(match[1], ids) === -1) ids.push(match[1]);
						        		}
						        	});
						        	$.ajax({
								        url: msaurl+ids,
								        type: 'GET',
								        success: function (data) {
								        	$('#tabs-2').html(data);
								        },
								        error: function (msg) {
								            $('#tabs-2').html("");
								            //hideData();
								        }
								    });
					        	}
					        },
					        error: function (msg) {
					            $('#tabs-2').html("");
					            //hideData();
					        }
					    });
					});
			</script>
