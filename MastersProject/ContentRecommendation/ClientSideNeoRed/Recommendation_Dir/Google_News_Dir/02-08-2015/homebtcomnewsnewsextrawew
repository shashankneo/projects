		} else if (Modernizr.width > 728 && Modernizr.width < 980) {
			googletag.defineSlot(slottag, [[728,90], [468,60]], 'div-gpt-slb-lb-banner-2').addService(googletag.pubads());
		} else if (Modernizr.width > 980) {
			if (false) {
				googletag.defineSlot(slottag, [[970,90], [728,90], [468,60]], 'div-gpt-slb-lb-banner-2').addService(googletag.pubads());
			} else {
				googletag.defineSlot(slottag, [[970,250], [970,90], [728,90], [468,60]], 'div-gpt-slb-lb-banner-2').addService(googletag.pubads());
			}
		}
		ads.refslots.push(function() {
			slottag = ads.adverttag + '_AdSlot2';
			slottag = slottag.toLowerCase();
			ads.toggslots.push('div-gpt-slb-lb-banner-r-2');
			//console.log(slottag);
			var slot=null;
			if (Modernizr.width >= 468 && Modernizr.width < 768) {
				slot = googletag.defineSlot(slottag, [[468, 60]], 'div-gpt-slb-lb-banner-r-2').addService(googletag.pubads());
			} else if (Modernizr.width > 728 && Modernizr.width < 980) {
				slot = googletag.defineSlot(slottag, [[728, 90], [468,60]], 'div-gpt-slb-lb-banner-r-2').addService(googletag.pubads());
			} else if (Modernizr.width > 980) {
				if (false) {
					slot = googletag.defineSlot(slottag, [[970, 90], [728, 90], [468,60]], 'div-gpt-slb-lb-banner-r-2').addService(googletag.pubads());
				} else {
					slot = googletag.defineSlot(slottag, [[970,250], [970, 90], [728, 90], [468,60]], 'div-gpt-slb-lb-banner-r-2').addService(googletag.pubads());
				}
			}
			googletag.display('div-gpt-slb-lb-banner-r-2');
			googletag.pubads().refresh([slot]);
		});
	});
</script>
		
