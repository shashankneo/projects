<script>
jQuery(document).ready(function($){
    var vastDomain = 'autos.stltoday.com';
    var vastLocation = 'St. Louis, MO';
    var vastDealer = '60739013,60739001,66657801,66657802,66657804,1513107,60739019,60739022,60739002,60739007,60739012,60739017,60739019-1';
    var vastNoPhoto = 'components/lee_core_2/resources/images/vast-no-photo.jpg';
    
    function shuffleVast(o){
        for(var j, x, i = o.length; i; j = parseInt(Math.random() * i), x = o[--i], o[i] = o[j], o[j] = x);
        return o;
    }
    function vastCarDetails(o){
        var image = o.images.imageCount> 0 ? o.images.large : vastNoPhoto;
        if( o.dealer ){
            dHTML = '<div class="dealer">';
            dHTML += '</div>';
        }

        var vHTML = '<li>';
		vHTML += '<div style="font-size:10px"><strong>'+o.year+' '+o.make+' '+o.model+'</strong></div>';
            vHTML += '<div class="widget-image left">';			
                vHTML += '<a href="http://'+vastDomain+o.url+'"><img src="'+image+'"></a>';
				vHTML += '<div style="font-size:10px">Condition: <strong>'+o.vehicle_condition+'</strong></div>';
                    vHTML += '<div style="font-size:10px">Mileage: <strong>'+o.mileage+'</strong></div>';
                    vHTML += '<div style="font-size:10px">MPG: <strong>'+o.mpg_combined+'</strong></div>';
                    vHTML += '<div style="font-size:10px">Engine: <strong>'+o.engine+'</strong></div>';
                    vHTML += '<div style="font-size:10px">Trans: <strong>'+o.transmission+'</strong></div>';
            vHTML += '</div>';
                          
                vHTML += dHTML;
                
            vHTML += '<div class="clear"></div>';
            
        vHTML += '</li>';

        return vHTML;
    }
        $.ajax({
        url: 'http://'+vastDomain+'/cars/api/dealer/'+vastDealer,
        dataType: 'jsonp',
		success: function( make ) {
                // console.log('make',make);
            $dealerStore = shuffleVast(make.results);
            // console.log($dealerStore);
            $.each($dealerStore, function(i, o){
                $('#vast-widget-items').append( vastCarDetails(o) );
              
                if( i === 1) return false;
            });
            

		}
	
		
	});
	$.ajax({	 
        url: 'http://'+vastDomain+'/search/api/location-'+vastLocation,
        dataType: 'jsonp',
		success: function( featured ) {
                // console.log('featured',featured);
            $featuredStore = shuffleVast(featured.results);
            $.each($featuredStore, function(i, o){
                $('#vast-widget-items').append( vastCarDetails(o) );
              
                if( i === 1) return false;
            });			
            $('#vast-sponsored-widget-start').hide();
            $('#vast-sponsored-widget').show();
		}
	});
	
});

</script></div></div>
