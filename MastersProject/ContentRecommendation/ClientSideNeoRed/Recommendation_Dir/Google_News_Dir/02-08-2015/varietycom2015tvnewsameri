				<!-- Article Headline -->
				<h1>John Ridley Reveals Season Two Plot of &#8216;American Crime&#8217; (EXCLUSIVE)</h1>

				<div class="indent">
					<!-- Share Tools -->
					<section class="module-share-tools">

	<div class="share-ui-container">

		<ul class="social-buttons social">
							<li class="share-email">
