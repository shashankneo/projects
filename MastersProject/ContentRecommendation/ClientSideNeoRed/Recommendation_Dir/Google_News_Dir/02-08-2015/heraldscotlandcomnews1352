<script>
(function() {
    var s = document.createElement('script');
    s.type = 'text/javascript';
    s.async = true;
    s.src = 'http://sugar-middle-martini.heraldandtimeslabs.com/sugar.js';
    var x = document.getElementsByTagName('script')[0];
    x.parentNode.insertBefore(s, x);
})();

	var getSection = function(hostName) {
		var etSections = ["news", "celtic", "rangers", "sport", "entertainment", "lifestyle", "opinions", "campaigns"];
		var hsSections = ["news", "politics", "sport", "business", "opinion", "life_style"];

		if (hostName.indexOf("www.eveningtimes.co.uk") > -1 ) {
			section = $(location).prop('pathname').split('/')[1];
			if (etSections.indexOf(section) != -1) {
				return etSections[etSections.indexOf(section)];
			}
		}
		if (hostName.indexOf("www.heraldscotland.com") > -1 ) {
			section = $(location).prop('pathname').split('/')[1];
			if (hsSections.indexOf(section) != -1) {
				return hsSections[hsSections.indexOf(section)];
			}
		}
		return '';
	};

	var getNewsSection = function() {
		hostName = window.location.hostname;
		section = getSection(hostName);
		if (getSection(hostName) != '') {
			return section;
		}
		return '';
	};

	if (getNewsSection() != '') {
		cbSection = section
		cbAuthor = utag_data.article_author_name;

		var _sf_async_config={};
		/** CONFIGURATION START **/
		_sf_async_config.uid = 61103;
		_sf_async_config.domain = 'heraldscotland.com';
		_sf_async_config.useCanonical = true;
		_sf_async_config.sections = cbSection;  //CHANGE THIS
		_sf_async_config.authors = cbAuthor;    //CHANGE THIS
		/** CONFIGURATION END **/
		(function(){
			function loadChartbeat() {
				window._sf_endpt=(new Date()).getTime();
				var e = document.createElement('script');
				e.setAttribute('language', 'javascript');
				e.setAttribute('type', 'text/javascript');
				e.setAttribute('src', '//static.chartbeat.com/js/chartbeat.js');
				document.body.appendChild(e);
			}
			var oldonload = window.onload;
			window.onload = (typeof window.onload != 'function') ?
			loadChartbeat : function() { oldonload(); loadChartbeat(); };
		})();

	}
</script>

