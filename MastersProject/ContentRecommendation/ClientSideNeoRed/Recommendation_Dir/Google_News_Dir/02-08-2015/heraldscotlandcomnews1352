            google_ad_client = "pub-1163627261638862";
            google_ad_slot = "";
            google_max_num_ads = "2";
            google_ad_output = "js";
            google_ad_type = "text";
            //google_adtest = "on"; //testing script ads
            google_feedback = "on";
            if  (google_adnum) {
                google_skip = google_adnum;
            } else {
                var google_adnum = 0;
            }
            function google_ad_request_done(google_ads){

                if(google_ads.length==0){return }
                var s="";
                if(google_ads[0].type=="text"){
                    s+='<h4 class="sectionHead widgetHeader"><a href=\"' + google_info.feedback_url + '\">Ads by Google</a></h4>';
                    s+='<ul class="gads">';
                    for(i=0;i<google_ads.length;++i){
                        s+="<li>";
                        s+='<h5><a href="'+google_ads[i].url+'" target="_top">'+google_ads[i].line1+"</a></h5>";
                        s+="<p>"+google_ads[i].line2+" "+google_ads[i].line3+"</p>";
                        s+='<p><a href="'+google_ads[i].url+'" target="_top">'+google_ads[i].visible_url+"</a></p>";
                        s+="</li>"
                    }
                    s+="</ul>"
                }
                if (google_ads[0].bidtype == "CPC") {  /* insert this snippet for each ad call */
                    google_adnum = google_adnum + google_ads.length;
                }

                function createAdsContainer(){
                    var AdsContainer=document.getElementById("google-ads-container3");
                    if(AdsContainer){
                        AdsContainer.innerHTML=s;
                    }
                }
                createAdsContainer();
                return;
            }
        </script>

