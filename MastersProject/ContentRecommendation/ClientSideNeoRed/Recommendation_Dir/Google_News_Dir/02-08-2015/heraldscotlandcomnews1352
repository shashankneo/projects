<script type="text/javascript">

var known = $.cookie('__siren') ? '1' : '0' ;
var jobsAndHomes = qs.decode('');

function getQs(name, src) {
    return (typeof src === 'object' && typeof src[name] !== 'undefined') ? decodeURIComponent(src[name]) : '';
}
function isMobile() {
    return (window.location.hostname.toString().indexOf('m.') === 0);
}


var utag_data = {
    is_test_site : "no",
    is_live_site : "yes",
    is_mobile_site : (isMobile()) ? 'yes' : 'no',
    is_desktop_site : (isMobile()) ? 'no' : 'yes',
    is_mobile_device : ($.mobile) ? 'yes' : 'no',
    cta_viewed_today: ($.cookie('cta_view') === 'seen') ? 'yes' : 'no',
    user_is_logged_in : 'no',
    site_centre_id : '14',
    site_centre_name : '',
    module_type : 'ArticleModule',
    site_name : 'Herald Scotland',
    google_analytics_id: '',
    site_template_set : 'heraldtimes',
    article_context : 'Business',
    article_id : '13523813',
    article_length_type : 'l',
    article_author_name : 'Daniel Sanderson',
