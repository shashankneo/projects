<script>
function redirectLocation(){
	var quickLinkArr = $("#quick_link_select").val().split('#@#');
	if( quickLinkArr[0] != '' ){
		if( quickLinkArr[1] == 'TRUE' ){
			window.open(quickLinkArr[0], '_blank');
		}else{
			window.location = quickLinkArr[0];
		}
	}
}
</script>
