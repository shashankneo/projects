<script type="text/javascript">

$.ajax({
    url : '/request-handler/get-latest-articles/catId/139/cache-control/900',
    async: false,
    success : function(data){
        $("#next-prev").html(data);
        var owl = $("#next-prev");
        owl.owlCarousel({
        items : 2, //10 items above 1000px browser width
        itemsDesktop : [980,2], //5 items between 1000px and 901px
        itemsDesktopSmall : [900,2], // 3 items betweem 900px and 601px
        itemsTablet: [360,2], //2 items between 600 and 0;
        itemsMobile : false // itemsMobile disabled - inherit from itemsTablet option
        });

        // Custom Navigation Events
        $(".next").click(function(){
          owl.trigger('owl.next');
        });
        $(".prev").click(function(){
          owl.trigger('owl.prev');
        });
        $(".play").click(function(){
          owl.trigger('owl.play',1000);
        });
        $(".stop").click(function(){
          owl.trigger('owl.stop');
        });
    }
});

function unFollowColumnist(){
	var author_id = '0';
	if(author_id != ''){
		if(confirm("Are you sure to unfollow this columnist!")==true){
	        $.ajax({
	            url : '/request-handler/article/unmap-user-columnist',
	            type : 'post',
	            data: {
					'authorId'	: author_id
				},
	            success : function(msg){
	                if(msg == 'success'){
	                	message = 'Thanks you!';
	                    alert(message); location.reload(); return false();
	                }else{
	                    message = 'Please try again';
	                    alert(message); return false();
	                }
	            }
	        });
		}
    }else{
       alert("Invalid columnist request!");
       return false();
    }

}

function followColumnist(){
  var author_id = '0';
	if(author_id != ''){
        $.ajax({
            url : '/request-handler/article/map-user-columnist',
            type : 'post',
            data: {
				'authorId'	: author_id
			},
            success : function(msg){
                if(msg == 'success'){
                	message = "Thanks you!";
                    alert(message); location.reload(); return false();
                }else{
                    message = "Please try again";
                    alert(message); return false();
                }
            }
        });
    }else{
       alert("Invalid columnist request!");
       return false();
    }

}

